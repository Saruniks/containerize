{
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "us-east-2",
            "ami_name": "vendenic {{timestamp}}",
            "instance_type": "t2.micro",
            "source_ami": "ami-00399ec92321828f5",
            "ssh_username": "ubuntu"
        }
    ],
    "provisioners":  [
        {
          "type": "shell",
          "inline": [
            "sudo mkdir /ops",
            "sudo chmod 777 /ops"
          ]
        },
        {
          "type": "file",
          "source": "shared",
          "destination": "/ops"
        },
        {
            "type": "shell",
            "script": "shared/scripts/setup.sh"
        }
    ]
}